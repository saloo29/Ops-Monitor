generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  RESPONDER
  ADMIN
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum IncidentStatus {
  OPEN
  INVESTIGATING
  IDENTIFIED
  MONITORING
  RESOLVED
}

enum IncidentEventType {
  CREATED 
  STATUSCHANGE
  PRIORITYCHANGE
  COMMENT
  ALERTRECIEVED
}

model User {
  userId String @id @default(uuid())
  email String @unique
  username String @unique
  password String
  role Role @default(RESPONDER) 
  createdAt DateTime @default(now())
  updatedAt DateTime 
  incidentsReported Incident[] @relation("Reporter")
  incidentsAssigned Incident[] @relation("Assignee")
  events IncidentEvent[]
}

model Incident {
  incidentId String @id @default(uuid())
  title String
  description String
  status IncidentStatus @default(OPEN)
  priority Priority @default(LOW)
  evidence Json?
  reporter User @relation("Reporter", fields: [reporterId], references: [userId])
  assignee User? @relation("Assignee", fields: [assigneeId], references: [userId])
  reporterId String
  assigneeId String ?
  createdAt DateTime @default(now())
  resolvedAt DateTime?
  events IncidentEvent[]
}

model IncidentEvent {
  alertId String @id @default(uuid())
  incident Incident @relation(fields: [incidentId], references: [incidentId]) 
  incidentId String
  actor User @relation(fields: [actorId], references:[userId])
  actorId String
  eventType IncidentEventType @default(CREATED)
  message String
  timeStamp DateTime @default(now())
}